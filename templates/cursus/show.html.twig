{% extends 'base.html.twig' %}

{% block title %}Cursus{% endblock %}

{% block body %}
    <h1>{{ cursus.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cursus.id }}</td>
            </tr>
            <tr>
                <th>Thème</th>
                <td>{{ cursus.theme.name }}</td>
            </tr>
            <tr>
                <th>Leçons</th>
                <td>
                    {% for lesson in cursus.lessons %}
                        {{ lesson.name }}
                        {{ not loop.last ? ',' }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ cursus.price }} €</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_theme_index') }}">Retour à la liste</a>

    <a href="{{ path('app_cursus_edit', {'id': cursus.id}) }}">Éditer</a>

    {{ include('cursus/_delete_form.html.twig') }}
{% endblock %}
