<div class="accordion" id="lessons">
    {% for lesson in cursus.lessons|sort((a, b) => a.number <=> b.number) %}
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#lesson-{{ lesson.id }}" aria-expanded="true" aria-controls="collapseOne">
                    {{ lesson.name }} 
                </button>
            </h2>
            <div id="lesson-{{ lesson.id }}" class="accordion-collapse collapse" data-bs-parent="#lessons">
                <div class="accordion-body">
                    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Ã‰diter</a>
                    <a href="{{ path('app_lesson_show', {'id': lesson.id}) }}">Voir</a>
                </div>
            </div>
        </div>
    {% endfor %}
</div>