{% extends 'base.html.twig' %}

{% block title %}Theme{% endblock %}

{% block body %}
    <h1>Theme {{ theme.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>Cursus</th>
                <td>
                    {% for cursus in theme.cursuses %}
                        {{ cursus.name }}
                        {{ not loop.last ? ',' }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_theme_index') }}">Retour à la liste</a>

    <a href="{{ path('app_theme_edit', {'id': theme.id}) }}">Éditer</a>

    {{ include('theme/_delete_form.html.twig') }}
{% endblock %}
